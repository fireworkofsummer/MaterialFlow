/* 出库记录页面样式 */

/* 筛选区域 */
.filter-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f9f9f9;
}

.filter-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-range {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.date-picker {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.date-separator {
  font-size: 24rpx;
  color: #999;
}

.sort-picker {
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
}

/* 记录列表 */
.records-list {
  margin-bottom: 100rpx;
}

.record-item {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border-left: 6rpx solid #ff9800;
}

.record-header {
  padding: 24rpx;
  background: #fff3e0;
  border-bottom: 1rpx solid #ffe0b2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-number {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.record-date {
  font-size: 26rpx;
  color: #666;
}

.record-info {
  padding: 20rpx 24rpx;
}

.info-row {
  display: flex;
  margin-bottom: 8rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.record-footer {
  padding: 20rpx 24rpx;
  background: #fff3e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-amount {
  display: flex;
  align-items: center;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.amount-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff9800;
}

.record-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #ff9800;
  background: white;
  border: 1rpx solid #ff9800;
  border-radius: 20rpx;
  text-align: center;
  min-width: 80rpx;
}

.action-btn.danger {
  color: #f44336;
  border-color: #f44336;
}

.action-btn:active {
  opacity: 0.7;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #ff9800, #ffc107);
  color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
}

.stats-item {
  text-align: center;
}

.stats-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.stats-value {
  font-size: 32rpx;
  font-weight: bold;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #ff9800;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
  z-index: 1000;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}
